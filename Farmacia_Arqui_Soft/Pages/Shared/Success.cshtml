@page
@model dynamic
@{
    Layout = "_Layout";
    ViewData["Title"] = "Operación Exitosa";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body py-5">
            <i class="bi bi-check-circle-fill text-success display-3 mb-3"></i>
            <h3 class="fw-bold text-success">Operación Exitosa</h3>
            <p class="text-muted mb-4">@Model.message</p>
            <a href="/Lots/Index" class="btn btn-outline-success rounded-pill px-4">
                <i class="bi bi-arrow-left me-2"></i>Volver a Lotes
            </a>
        </div>
    </div>
</div>
