@page
@model Farmacia_Arqui_Soft.Pages.Lots.IndexModel

<h2>Lots</h2>
<a asp-page="Create" class="btn btn-primary mb-3">+ New Lot</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Medicine ID</th>
            <th>Batch</th>
            <th>Expiration</th>
            <th>Quantity</th>
            <th>Unit Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lot in Model.Lots)
        {
            <tr>
                <td>@lot.Id</td>
                <td>@lot.MedicineId</td>
                <td>@lot.BatchNumber</td>
                <td>@lot.ExpirationDate.ToShortDateString()</td>
                <td>@lot.Quantity</td>
                <td>@lot.UnitCost</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@lot.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-page="Delete" asp-route-id="@lot.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
