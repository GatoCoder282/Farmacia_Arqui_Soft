@page "{id:int}"
@model Farmacia_Arqui_Soft.Pages.Lots.EditModel

<h2>Edit Lot</h2>

<form method="post">
    <input type="hidden" asp-for="Lot.Id" />

    <div class="form-group mb-2">
        <label>Medicine ID</label>
        <input asp-for="Lot.MedicineId" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Batch Number</label>
        <input asp-for="Lot.BatchNumber" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Expiration Date</label>
        <input asp-for="Lot.ExpirationDate" type="date" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Quantity</label>
        <input asp-for="Lot.Quantity" type="number" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Unit Cost</label>
        <input asp-for="Lot.UnitCost" type="number" step="0.01" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">💾 Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
