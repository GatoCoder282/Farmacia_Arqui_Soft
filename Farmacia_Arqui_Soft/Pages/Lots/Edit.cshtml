@page "{id:int}"
@model Farmacia_Arqui_Soft.Pages.Lots.EditModel

<h2>Editar Lote</h2>

<!-- Resumen de errores -->
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" class="mt-4">
    <input type="hidden" asp-for="Lot.Id" />

    <div class="form-group mb-3">
        <label for="MedicineId">ID del Medicamento</label>
        <input type="number" id="MedicineId" class="form-control" asp-for="Lot.MedicineId" required />
        <span asp-validation-for="Lot.MedicineId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="BatchNumber">Número de Lote</label>
        <input type="text" id="BatchNumber" class="form-control" asp-for="Lot.BatchNumber" required />
        <span asp-validation-for="Lot.BatchNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="ExpirationDate">Fecha de Vencimiento</label>
        <input type="date" id="ExpirationDate" class="form-control" asp-for="Lot.ExpirationDate" required />
        <span asp-validation-for="Lot.ExpirationDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="Quantity">Cantidad</label>
        <input type="number" id="Quantity" class="form-control" asp-for="Lot.Quantity" required />
        <span asp-validation-for="Lot.Quantity" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="UnitCost">Costo Unitario</label>
        <input type="number" id="UnitCost" class="form-control" asp-for="Lot.UnitCost" step="0.01" required />
        <span asp-validation-for="Lot.UnitCost" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Actualizar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
