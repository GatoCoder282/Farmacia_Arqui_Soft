@page "{id:int}"
@model Farmacia_Arqui_Soft.Pages.Lots.DeleteModel
@{
    ViewData["Title"] = "Eliminar Lote";
}

@section Styles {
    <link rel="stylesheet" href="~/css/delete.css" />
}

<div class="delete-modal">
    <div class="delete-header">
        <i class="bi bi-trash3 me-2"></i>Eliminar Lote
    </div>

    <div class="delete-body">
        @if (Model.Lot is null)
        {
            <div class="alert alert-warning shadow-sm">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> El lote no existe o ya fue eliminado.
            </div>
            <a asp-page="Index" class="btn btn-cancel mt-3">Volver</a>
        }
        else
        {
            <p>
                Â¿Deseas eliminar el lote 
                <strong>@Model.Lot.BatchNumber</strong>?
            </p>

            <form method="post" class="mt-3">
                <input type="hidden" asp-for="Lot.Id" />
                <button type="submit" class="btn btn-delete me-2">
                    <i class="bi bi-trash me-2"></i>Eliminar
                </button>
                <a asp-page="Index" class="btn btn-cancel">
                    <i class="bi bi-x-circle me-2"></i>Cancelar
                </a>
            </form>
        }
    </div>
</div>
