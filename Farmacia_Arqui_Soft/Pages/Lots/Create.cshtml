@page
@model Farmacia_Arqui_Soft.Pages.Lots.CreateModel

<h2>Create Lot</h2>

<form method="post">
    <div class="form-group mb-2">
        <label>Medicine ID</label>
        <input asp-for="Lot.MedicineId" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label>Batch Number</label>
        <input asp-for="Lot.BatchNumber" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label>Expiration Date</label>
        <input asp-for="Lot.ExpirationDate" type="date" class="form-control" required />
    </div>
    <div class="form-group mb-2">
        <label>Quantity</label>
        <input asp-for="Lot.Quantity" class="form-control" type="number" min="1" required />
    </div>
    <div class="form-group mb-2">
        <label>Unit Cost</label>
        <input asp-for="Lot.UnitCost" class="form-control" type="number" step="0.01" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Save</button>
    <a asp-page="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
