@page "{id:int}"
@model Farmacia_Arqui_Soft.Pages.Users.EditModel
@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form method="post">
    <input type="hidden" asp-for="User.id" />

    <div class="form-group mb-2">
        <label>Usuario</label>
        <input asp-for="User.username" class="form-control" required />
    </div>

    <div class="form-group mb-2">
        <label>Contraseña</label>
        <input asp-for="User.password" class="form-control" required type="password" />
    </div>

    <div class="form-group mb-2">
        <label>Teléfono</label>
        <input asp-for="User.phone" class="form-control" required type="number" />
    </div>

    <div class="form-group mb-2">
        <label>CI</label>
        <input asp-for="User.ci" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Actualizar</button>
    <a asp-page="Index" class="btn btn-secondary mt-2">Volver</a>
</form>
