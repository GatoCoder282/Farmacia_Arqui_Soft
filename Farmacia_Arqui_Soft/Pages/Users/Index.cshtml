@page
@model Farmacia_Arqui_Soft.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Usuarios";
}

<h2>Usuarios</h2>

@if (TempData["Successss"] is string ok && !string.IsNullOrWhiteSpace(ok))
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
{
    <div class="alert alert-danger">@err</div>
}

<p>
    <a asp-page="Create" class="btn btn-primary">Nuevo usuario</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Nombre(s)</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>CI</th>
            <th>Rol</th>
            <th>Creado</th>
            <th style="width:160px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.Users)
        {
            <tr>
                <td>@u.username</td>
                <td>@u.first_name @u.second_name</td>
                <td>@u.last_name</td>
                <td>@u.mail</td>
                <td>@u.phone</td>
                <td>@u.ci</td>
                <td>@u.role</td>
                <td>@u.created_at.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@u.id" class="btn btn-sm btn-outline-secondary">Editar</a>
                    <a asp-page="Delete" asp-route-id="@u.id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
