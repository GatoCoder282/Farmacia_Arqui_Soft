@page
@model Farmacia_Arqui_Soft.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white text-center rounded-top-4 py-3">
            <h3 class="mb-0">
                <i class="bi bi-trash3 me-2"></i>Eliminar Usuario
            </h3>
        </div>

        <div class="card-body text-center">
            @if (Model.User is null)
            {
                <div class="alert alert-warning shadow-sm">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> El usuario no existe.
                </div>
                <a asp-page="Index" class="btn btn-outline-secondary px-4 rounded-pill mt-3">
                    <i class="bi bi-arrow-left me-2"></i>Volver
                </a>
            }
            else
            {
                <p class="fs-5 mb-4">
                    ¿Estás seguro de que deseas eliminar a
                    <strong>@Model.User.username</strong> (@Model.User.first_name @Model.User.second_name @Model.User.last_name)?
                </p>

                <form method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger px-4 rounded-pill shadow-sm">
                        <i class="bi bi-trash me-2"></i>Eliminar
                    </button>
                    <a asp-page="Index" class="btn btn-outline-secondary px-4 rounded-pill ms-2">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </form>
            }
        </div>
    </div>
</div>
