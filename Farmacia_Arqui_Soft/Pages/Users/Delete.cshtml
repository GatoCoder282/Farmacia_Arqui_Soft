@page
@model Farmacia_Arqui_Soft.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Eliminar Usuario";
}

@section Styles {
    <link rel="stylesheet" href="~/css/delete.css" />
}

<div class="delete-modal">
    <div class="delete-header">
        <i class="bi bi-trash3 me-2"></i>Eliminar Usuario
    </div>

    <div class="delete-body">
        @if (Model.User is null)
        {
            <div class="alert alert-warning shadow-sm">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> El usuario no existe.
            </div>
            <a asp-page="Index" class="btn btn-cancel mt-3">Volver</a>
        }
        else
        {
            <p>
                ¿Deseas eliminar a <strong>@Model.User.username</strong> 
                (@Model.User.first_name @Model.User.last_name)?
            </p>
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-delete me-2">
                    <i class="bi bi-trash me-2"></i>Eliminar
                </button>
                <a asp-page="Index" class="btn btn-cancel">
                    <i class="bi bi-x-circle me-2"></i>Cancelar
                </a>
            </form>
        }
    </div>
</div>
