@page
@model Farmacia_Arqui_Soft.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>

@if (Model.User is null)
{
    <div class="alert alert-warning">El usuario no existe.</div>
    <a asp-page="Index" class="btn btn-secondary">Volver</a>
}
else
{
    <div class="alert alert-danger">
        ¿Seguro que deseas eliminar a
        <strong>@Model.User.username</strong>
        (@Model.User.first_name @Model.User.second_name @Model.User.last_name)?
    </div>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
}
