@page "{id:int}"
@model Farmacia_Arqui_Soft.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>

<div class="alert alert-warning">
    <p>¿Estás seguro que deseas eliminar al usuario <strong>@Model.User.username</strong>?</p>
</div>

<form method="post">
    <input type="hidden" asp-for="User.id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
