@page "{id:int}"
@model Farmacia_Arqui_Soft.Pages.Client.DeleteModel
@{
    ViewData["Title"] = "Eliminar cliente";
}

<h2>Eliminar cliente</h2>
<hr />

<div class="alert alert-danger">
    ¿Seguro que deseas eliminar a
    <strong>@Model.Record.first_name @Model.Record.last_name</strong>
    (ID: @Model.Record.id)?
</div>

<dl class="row">
    <dt class="col-sm-3">NIT</dt>
    <dd class="col-sm-9">@Model.Record.nit</dd>
    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Record.email</dd>
    <dt class="col-sm-3">Estado</dt>
</dl>

<form method="post">
    <!-- asegura que el id viaje en el POST -->
    <input type="hidden" name="id" value="@Model.Record.id" />
    <button class="btn btn-danger" type="submit">Sí, eliminar</button>
    <a asp-page="/Client/IndexClient" class="btn btn-secondary ms-2">Cancelar</a>
</form>
