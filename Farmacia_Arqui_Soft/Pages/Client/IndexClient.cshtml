@page
@model Farmacia_Arqui_Soft.Pages.Client.IndexClientModel
@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Clientes</h2>
    <a asp-page="/Client/Create" class="btn btn-primary">+ Agregar cliente</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>NIT</th>
            <th>Email</th>

            <th style="width:180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Clients is not null && Model.Clients.Any())
        {
            foreach (var c in Model.Clients)
            {
                <tr>
                    <td>@c.id</td>
                    <td>@c.first_name</td>
                    <td>@c.last_name</td>
                    <td>@c.nit</td>
                    <td>@c.email</td>
                 
                    <td>
                        <a asp-page="/Client/Details" asp-route-id="@c.id" class="btn btn-sm btn-info me-1">Detalles</a>
                        <a asp-page="/Client/Edit" asp-route-id="@c.id" class="btn btn-sm btn-warning me-1">Editar</a>
                        <a asp-page="/Client/Delete" asp-route-id="@c.id" class="btn btn-sm btn-warning me-1">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="9" class="text-center text-muted">No hay clientes.</td></tr>
        }
    </tbody>
</table>
