@page
@model Farmacia_Arqui_Soft.Pages.Client.IndexClientModel
@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <h2 class="fw-bold text-success mb-0">
        <i class="bi bi-people-fill me-2"></i> Clientes
    </h2>
    <a asp-page="/Client/Create" class="btn btn-success shadow-sm rounded-pill px-4">
        <i class="bi bi-plus-circle me-2"></i> Agregar cliente
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0 text-center" style="min-width: 950px;">
            <thead class="table-success text-dark">
                <tr>
                    <th scope="col" style="width:6%;">ID</th>
                    <th scope="col" style="width:18%;">Nombre</th>
                    <th scope="col" style="width:18%;">Apellido</th>
                    <th scope="col" style="width:15%;">NIT</th>
                    <th scope="col" style="width:25%;">Email</th>
                    <th scope="col" style="width:18%;">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Clients is not null && Model.Clients.Any())
                {
                    foreach (var c in Model.Clients)
                    {
                        <tr>
                            <td>@c.id</td>
                            <td>@c.first_name</td>
                            <td>@c.last_name</td>
                            <td>@c.nit</td>
                            <td>@c.email</td>
                            <td>
                                <!-- DIV con "gap-2" maneja el espaciado de todos los botones -->
                                <div class="d-flex justify-content-center gap-2">

                                    <!-- ENLACE DE DETALLES (Correcto) -->
                                    <a asp-page="/Client/Details" asp-route-id="@c.id"
                                       class="btn btn-sm btn-outline-info rounded-circle"
                                       title="Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <!-- ENLACE DE EDICIÓN (Correcto) -->
                                    <a asp-page="/Client/Edit" asp-route-id="@c.id"
                                       class="btn btn-sm btn-outline-warning rounded-circle"
                                       title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <!-- FORMULARIO DE ELIMINAR (Solo contiene el botón y el ID oculto) -->
                                    <form method="post" asp-page-handler="Delete" onsubmit="return confirm('¿Está seguro de que desea eliminar a @c.first_name @c.last_name? La acción es irreversible (soft delete).');">
                                        <input type="hidden" name="id" value="@c.id" />

                                        <!--
                                             *** ESTOS ERAN LOS BOTONES DUPLICADOS QUE FUERON ELIMINADOS ***
                                             <a asp-page="/Client/Details" asp-route-id="@c.id" ... >...</a>
                                             <a asp-page="/Client/Edit" asp-route-id="@c.id" ... >...</a>
                                        -->
                                        <!-- BOTÓN DE ELIMINAR (Correcto) -->
                                        <button type="submit"
                                                class="btn btn-sm btn-outline-danger rounded-circle"
                                                title="Eliminar">
                                            <i class="bi bi-trash3"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-4">
                            <i class="bi bi-inbox me-2"></i> No hay clientes registrados.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>