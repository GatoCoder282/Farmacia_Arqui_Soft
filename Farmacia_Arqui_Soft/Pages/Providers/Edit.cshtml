@page
@model Farmacia_Arqui_Soft.Pages.Providers.EditModel
@{
    ViewData["Title"] = "Editar Proveedor";
}

<h2>Editar Proveedor</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Provider.firstName"></label>
        <input asp-for="Provider.firstName" class="form-control" />
        <span asp-validation-for="Provider.firstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Provider.lastName"></label>
        <input asp-for="Provider.lastName" class="form-control" />
        <span asp-validation-for="Provider.lastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Provider.nit"></label>
        <input asp-for="Provider.nit" class="form-control" />
        <span asp-validation-for="Provider.nit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Provider.email"></label>
        <input asp-for="Provider.email" class="form-control" />
        <span asp-validation-for="Provider.email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Provider.phone"></label>
        <input asp-for="Provider.phone" class="form-control" />
        <span asp-validation-for="Provider.phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Provider.address"></label>
        <input asp-for="Provider.address" class="form-control" />
        <span asp-validation-for="Provider.address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Provider.status"></label>
        <select asp-for="Provider.status" class="form-control">
            <option value="1">Activo</option>
            <option value="0">Inactivo</option>
        </select>
        <span asp-validation-for="Provider.status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
