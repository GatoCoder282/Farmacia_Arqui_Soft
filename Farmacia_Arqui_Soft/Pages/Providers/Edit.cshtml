@page "{encryptedId?}" 
@model Farmacia_Arqui_Soft.Pages.Providers.EditModel
@{
    ViewData["Title"] = "Editar Proveedor";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark text-center rounded-top-4 py-3">
            <h3 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i>Editar Proveedor
            </h3>
        </div>

        <div class="card-body p-4">
            <form 
method="post">
                <input type="hidden" asp-for="Provider.id" />
                <div asp-validation-summary="All" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                       
 <label class="form-label fw-semibold">Nombres</label>
                        <input asp-for="Provider.firstName" class="form-control rounded-pill" required />
                        <span asp-validation-for="Provider.firstName" class="text-danger small"></span>
                    </div>

                    <div 
class="col-md-6">
                        <label class="form-label fw-semibold">Apellidos</label>
                        <input asp-for="Provider.lastName" class="form-control rounded-pill" required />
                        <span asp-validation-for="Provider.lastName" class="text-danger small"></span>
                  
    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">NIT</label>
                        <input asp-for="Provider.nit" class="form-control rounded-pill" />
                       
 <span asp-validation-for="Provider.nit" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Correo Electrónico</label>
                        <input asp-for="Provider.email" type="email" class="form-control 
rounded-pill" />
                        <span asp-validation-for="Provider.email" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Teléfono</label>
     
                    <input asp-for="Provider.phone" class="form-control rounded-pill" />
                        <span asp-validation-for="Provider.phone" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
         
                 <label class="form-label fw-semibold">Dirección</label>
                        <input asp-for="Provider.address" class="form-control rounded-pill" />
                        <span asp-validation-for="Provider.address" class="text-danger small"></span>
                    </div>

        
                 <div class="col-md-6">
                        <label class="form-label fw-semibold">Estado</label>
                        <select asp-for="Provider.status" class="form-select rounded-pill">
                            <option value="1">Activo</option>
     
                         <option value="0">Inactivo</option>
                        </select>
                        <span asp-validation-for="Provider.status" class="text-danger small"></span>
                    </div>
     
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-warning px-4 rounded-pill shadow-sm text-white">
                        <i class="bi bi-check2-circle me-2"></i>Actualizar
                 
     </button>
                    <a asp-page="Index" class="btn btn-outline-secondary px-4 rounded-pill ms-2">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                </div>
        
         </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}