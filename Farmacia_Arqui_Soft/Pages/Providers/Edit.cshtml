@page "{id:int}"
@model Farmacia_Arqui_Soft.Pages.Providers.EditModel
@{
    ViewData["Title"] = "Editar Proveedor";
}

<h2>Editar Proveedor</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <input type="hidden" asp-for="Provider.id" />

    <div class="row g-2">
        <div class="col-md-6">
            <label>Nombres</label>
            <input asp-for="Provider.firstName" class="form-control" required />
            <span asp-validation-for="Provider.firstName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label>Apellidos</label>
            <input asp-for="Provider.lastName" class="form-control" required />
            <span asp-validation-for="Provider.lastName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label>NIT</label>
            <input asp-for="Provider.nit" class="form-control" />
            <span asp-validation-for="Provider.nit" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label>Email</label>
            <input asp-for="Provider.email" class="form-control" type="email" />
            <span asp-validation-for="Provider.email" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label>Teléfono</label>
            <input asp-for="Provider.phone" class="form-control" />
            <span asp-validation-for="Provider.phone" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label>Dirección</label>
            <input asp-for="Provider.address" class="form-control" />
            <span asp-validation-for="Provider.address" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label>Status</label>
            <input asp-for="Provider.status" class="form-control" type="number" min="0" max="255" />
            <span asp-validation-for="Provider.status" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a asp-page="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
