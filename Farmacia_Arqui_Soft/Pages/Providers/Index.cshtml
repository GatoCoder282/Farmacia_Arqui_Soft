@page
@model Farmacia_Arqui_Soft.Pages.Providers.IndexModel
@{
    ViewData["Title"] = "Proveedores";
}

<h2>Proveedores</h2>

<div class="mb-2">
    <a asp-page="Create" class="btn btn-primary">Nuevo Proveedor</a>
</div>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombres</th>
            <th>NIT</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Status</th>
            <th style="width:170px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Providers)
        {
            <tr>
                <td>@p.id</td>
                <td>@p.firstName @p.lastName</td>
                <td>@p.nit</td>
                <td>@p.email</td>
                <td>@p.phone</td>
                <td>@p.status</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@p.id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="Delete" asp-route-id="@p.id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7">@Model.Providers.Count() registros</td>
        </tr>
    </tfoot>
</table>
